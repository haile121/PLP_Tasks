    <title>Mini E-Learning Platform</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f8;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #4CAF50;
            color: white;
            padding: 15px 20px;
            text-align: center;
        }
        h1 {
            margin: 0;
        }
        .container {
            padding: 20px;
            max-width: 900px;
            margin: auto;
        }
        .course-list, .course-details {
            display: none;
        }
        .course-list.active, .course-details.active {
            display: block;
        }
        .course-item {
            background-color: white;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .course-item:hover {
            transform: scale(1.02);
            background-color: #e8f5e9;
        }
        button {
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
            background-color: #4CAF50;
            color: white;
            transition: background-color 0.2s;
        }
        button:hover {
            background-color: #45a049;
        }
        .completed {
            background-color: #9E9E9E !important;
            cursor: default;
        }
        .back-btn {
            background-color: #2196F3;
        }
        .back-btn:hover {
            background-color: #1976D2;
        }
        ul {
            padding-left: 20px;
        }
